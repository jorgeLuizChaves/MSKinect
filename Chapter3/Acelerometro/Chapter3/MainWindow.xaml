<Window x:Class="Chapter3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="X:" Grid.Row="0" FontSize="24" VerticalAlignment="Center"/>
        <Label Content="Y:" Grid.Row="1" FontSize="24" VerticalAlignment="Center"/>
        <Label Content="Z:" Grid.Row="2" FontSize="24" VerticalAlignment="Center"/>

        <Label Grid.Row="0" Content="0" Name="labelX" Grid.Column="1" FontSize="24" VerticalAlignment="Center"/>
        <Label Grid.Row="1" Content="0" Name="labelY" Grid.Column="1" FontSize="24" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Content="0" Name="labelZ" Grid.Column="1" FontSize="24" VerticalAlignment="Center"/>

    </Grid>
</Window>
